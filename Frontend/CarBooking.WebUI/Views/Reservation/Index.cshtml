@model CreateReservationDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section contact-section">
    <div class="container">

        <h3 class="text-center alert alert-success">Hemen Rezervason Yap</h3>



        <div class="row d-flex mb-5 contact-info flex">
            <div class="col-md-12 block-9 mb-md-5">

                <form class="bg-light p-5 contact-form" method="post">
                    <div class="form-group">
                        <input type="hidden" readonly class="form-control" asp-for="CarId" value="@ViewBag.carId">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" asp-for="Phone" placeholder="Telefon">
                    </div>
                    <div class="form-group">
                        <label class="label">Almak İstediğiniz Lokasyon</label>
                        @Html.DropDownListFor(x => x.PickUpLocationId, (List<SelectListItem>)ViewBag.locations, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label class="label">Teslim Etmek İstediğiniz Lokasyon</label>
                        @Html.DropDownListFor(x => x.DropOffLocationId, (List<SelectListItem>)ViewBag.locations, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min="0" max="120"  asp-for="Age" placeholder="Yaşınız">
                    </div>
                    <div class="form-group">
                        <input type="number" class="form-control" min="0" max="100" asp-for="DrivingLicenceYear" placeholder="Ehliyet Yılınız">
                    </div>
                    <div class="form-group">
                        <textarea id="" cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Eklemek İstedikleriniz"></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>