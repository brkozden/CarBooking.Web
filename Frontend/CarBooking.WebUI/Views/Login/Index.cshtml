@model ResultLoginDto
@{
    Layout = null;
}


<head>
    <meta charset="utf-8" />
    <title>Giriş Yap</title>
   
    <link rel="shortcut icon" href="/Admin/vertical/assets/images/favicon.ico">
    <link href="/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5">
                                    <img src="~/default-images/register_image2.jpg" width="500px" height="500px" />
                                </div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="/Login/Index" class="text-dark font-size-22 font-family-secondary">
                                                <b>Giriş Yap</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Hoşgeldiniz</h1>
                                        <p class="text-muted mb-4">Kullanıcı adınızı ve parolanız ile Admin sayfasına giriş yapabilirsiniz.</p>
                                        <form class="user" method="post">
                                            <div class="form-group">
                                                <input type="text" class="form-control form-control-user" id="exampleInputUsername" placeholder="Kullanıcı Adı" asp-for="Username">
                                            </div>
                                            <div class="form-group">
                                                <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Şifre" asp-for="Password">
                                            </div>
                                            <button class="btn btn-success btn-block waves-effect waves-light"> Giriş Yap </button>

                                         

                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Anasayfaya <a href="/Default/Index" class="text-muted font-weight-medium ml-1"><b>Geri Dön</b></a></p>

                                                <p class="text-muted mb-0">Bir hesabınız yok mu? Şimdi <a href="/Register/CreateUser" class="text-muted font-weight-medium ml-1"><b>Kayıt Ol</b></a></p>
                                            </div> 
                                        </div>
                                    
                                    </div> 
                                </div> 
                            </div> 
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div>
    
    </div>
   
    <script src="/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="/Admin/vertical/assets/js/waves.js"></script>
    <script src="/Admin/vertical/assets/js/simplebar.min.js"></script>
    <script src="/Admin/vertical/assets/js/theme.js"></script>

</body>