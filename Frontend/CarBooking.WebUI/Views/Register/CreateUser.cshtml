@model CreateRegisterDto
@{
    Layout = null;
}
<head>
    

    <link rel="shortcut icon" href="~/Admin/vertical/assets/images/favicon.ico">
    <link href="~/Admin/vertical/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Admin/vertical/assets/css/theme.min.css" rel="stylesheet" type="text/css" />

</head>

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5">
                                    <img src="~/default-images/register_image2.jpg" width="500px" height="500px"  />
                                </div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="/Register/CreateUser" class="text-dark font-size-22 font-family-secondary">
                                                <b>
                                                    Üye Ol
                                                </b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Bir Hesap Oluştur</h1>
                                        <p class="text-muted mb-4">Bir hesabınız yok mu? Hemen bir dakika içerisinde yeni hesabınızı oluşturun.</p>
                                        <form class="user" method="post">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Adınız" asp-for="Name">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="text" class="form-control form-control-user" id="exampleLastName" placeholder="Soyadınız" asp-for="Surname">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <input type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email" asp-for="Email" >
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input type="text" class="form-control form-control-user" id="exampleInputUsername" placeholder="Kullanıcı Adı" asp-for="Username" >
                                                </div>
                                                <div class="col-sm-6">
                                                    <input type="password" class="form-control form-control-user" id="exampleRepeatPassword" placeholder="Şifre" asp-for="Password">
                                                </div>
                                            </div>
                                            <button class="btn btn-success btn-block waves-effect waves-light"> Hesabı Oluştur </button>


                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Bir Hesabın Var Mı?  <a href="/Login/Index" class="text-muted font-weight-medium ml-1"><b>Hemen Giriş Yap</b></a></p>
                                            </div> 
                                        </div>
                                     
                                    </div> 
                                </div> 
                            </div> 
                        </div> 
                    </div> 
                </div> 
            </div> 
        </div>

    </div>
    
    <script src="~/Admin/vertical/assets/js/jquery.min.js"></script>
    <script src="~/Admin/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/vertical/assets/js/metismenu.min.js"></script>
    <script src="~/Admin/vertical/assets/js/waves.js"></script>
    <script src="~/Admin/vertical/assets/js/simplebar.min.js"></script>
    <script src="~/Admin/vertical/assets/js/theme.js"></script>

</body>

