<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form method="post" asp-action="CreateComment" asp-controller="Blog" class="p-5 bg-light">
        <input type="hidden" name="BlogId" value="@ViewBag.blogId"/>
        <div class="form-group">
            <label for="name">Adınız Soyadınız *</label>
            <input type="text" class="form-control" id="name" name="Name">
        </div>
        <div class="form-group">
            <label for="email">Email *</label>
            <input type="email" class="form-control" id="email" name="Email">
        </div>

        <div class="form-group">
            <label for="message">Yorumunuz *</label>
            <textarea  id="message" cols="30" rows="10" class="form-control" name="Description"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>