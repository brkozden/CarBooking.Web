
@model List<ResultCommentDto>

<ul class="comment-list">
    @foreach (var item in Model)
    {
        <li class="comment">
            <div class="vcard bio border-rounded">
                <img src="/default-images/comment.jpg" alt="Image placeholder"   >
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@(((DateTime)item.CreatedDate).ToString("dd-MMMM-yyyy hh:mm"))</div>
                <p>@item.Description</p>
            </div>
        </li>
    }
    

   
</ul>