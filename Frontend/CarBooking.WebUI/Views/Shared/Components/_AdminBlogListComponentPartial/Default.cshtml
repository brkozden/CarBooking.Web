@model List<ResultAllBlogsWithAuthorsDto>
@{
    int count = 0;
}
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Yazalarımızın Blogları</h4>
            <p class="card-subtitle mb-4 font-size-13">
              Yazarlarımızın son blogları.
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
                    <thead>
                    <th>#</th>
                    <th>Blog Başlığı</th>
                    <th>Bloğu Aç</th>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        @count
                                    </h5>
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.Title</h5>
                                    
                                </td>
                              
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        <a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-primary">Bloğu Aç</a>
                                    </h5>
                                </td>
                            </tr>
                        }
                        


                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
