@model List<ResultCarWithBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";

    int count = 0;
}
<a href="/AdminCar/CreateCar" class="btn btn-success btn-lg btn-block waves-effect waves-light">
    Yeni Araba Ekle
</a>





<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araba Listesi</h4>
                <p class="card-subtitle mb-4">
                   <code>Arabalar ile ilgili ekleme, güncelleme, silme ve listeleme gibi işlemleri bu sayfa üzerinden yapabilirsiniz.</code> 
                </p>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Marka</th>
                                <th>Model</th>
                                <th>Km</th>
                                <th>Vites</th>
                                <th>Yakıt</th>
                                <th>Güncelle</th>
                                <th>Sil</th>
                                <th>Detaylar</th>
                                <th>Fiyat Bilgileri</th>
                                <th>Sitede Gör</th>

                               


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.BrandName</td>
                                    <td>@item.Model</td>
                                    <td>@item.Km</td>
                                    <td>@item.Transmission</td>
                                    <td>@item.Fuel</td>
                                    <td><a href="/AdminCar/UpdateCar/@item.CarId" class="btn btn-outline-success waves-effect waves-light">Güncelle</a></td>
                                    <td><a href="/AdminCar/RemoveCar/@item.CarId" class="btn btn-outline-danger waves-effect waves-light">Sil</a></td>
                                    <td><a href="/Admin/CarFeatureDetail/Index/@item.CarId" class="btn btn-outline-info waves-effect waves-light">Detaylar</a></td>
                                    <td><a href="/AdminCar/CarDetail/" class="btn btn-outline-secondary waves-effect waves-light">Fiyat Bilgileri</a></td>

                                    <td><a href="/AdminCar/CarDetail/" class="btn btn-outline-dark waves-effect waves-light">Sitede Gör</a></td>



                                </tr>
                            }
                           
                          
                        </tbody>
                    </table>
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->



</div>