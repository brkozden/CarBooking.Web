@model List<ResultCommentDto>

@{
    ViewData["Title"] = "GetComment";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}




@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yorum Listesi | Blog Id: @ViewBag.Id</h4>
                    <p class="card-subtitle mb-4">
                        <code>
                            @ViewBag.Id numaralı bloğa ait yorumları görüntülemektesiniz. İstemediğiniz yorumları kaldırabilirsiniz.
                        </code>
                    </p>
                    <div class="row">
                    @foreach (var item in Model)
                    {
                        count++;


                        <div class="col-md-6">
                            <div class="card text-center">
                                <div class="card-header">
                                    @count
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">@item.Name</h4>
                                    <p class="card-text">
                                        @item.Description
                                    </p>
                                    <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                </div>
                                <div class="card-footer text-muted">
                                    @item.CreatedDate.ToShortDateString()
                                </div>
                            </div>
                        </div>
                        }
                    </div>
            </div>
        </div>

    </div>



        </div>


}
else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Bloğa Ait Yorum Bulunamadı</div>

}





