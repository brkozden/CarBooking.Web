@model UpdateFooterAddressDto
@{
    ViewData["Title"] = "UpdateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Adres Bilgisi Güncelleme</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Adres İşlemleri</a></li>
                    <li class="breadcrumb-item active">Adres Bilgisi Güncelleme</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Marka Güncelleme Formu</h4>
                <p class="card-subtitle mb-4"><code>Mevcut adres bilgilerinizi bu formu doldurarak güncelleyebilirsiniz.
                    Adres bilgilerini lütfen eksiksiz giriniz.</code></p>
                <form class="needs-validation" method="post">
                    <div class="form-row">
                        <input type="hidden" asp-for="FooterAddressId"/>
                        <div class="col-md-12 mb-12">
                            <label for="validationTitle">Açıklama</label>
                            <input type="text" class="form-control" asp-for="Description" id="validationTitle" required>
                        </div>
                        
                        <div class="col-md-6 mb-6">
                            <label for="validationVideoPhone">Telefon</label>
                            <input type="tel" class="form-control" asp-for="Phone" id="validationPhone" required>
                        </div>
                        <div class="col-md-6 mb-6">
                            <label for="validationEmail">Email</label>
                            <input type="email" class="form-control" asp-for="Email" id="validationEmail" required>
                        </div>
                        <div class="col-md-12 mb-12">
                            <label for="validationAdress">Adres</label>
                            <textarea rows="5" class="form-control" asp-for="Address" id="validationAdress" required></textarea>
                        </div>
                    </div>


                    <button class="btn btn-primary waves-effect waves-light mt-3" type="submit">Adresi Güncelle</button>
                </form>

            </div>
        </div>
    </div>

</div>









