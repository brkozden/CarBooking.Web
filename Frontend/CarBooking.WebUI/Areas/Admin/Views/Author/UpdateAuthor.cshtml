@model UpdateAuthorDto
@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Yazar Bilgisi Güncelleme</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Yazar İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yazar Bilgisi Güncelleme</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Yazar Güncelleme Formu</h4>
                <p class="card-subtitle mb-4"><code>Mevcut marka adını bu formu doldurarak güncelleyebilirsiniz. Marka ile ilgili isim bilgisini lütfen eksiksiz giriniz.</code></p>
                <form class="needs-validation" method="post">
                    <input type="hidden" asp-for="AuthorId" />
                    <div class="form-row">

                        <div class="col-md-6 mb-6">
                            <label for="validationName">Yazar Adı ve Soyadı</label>
                            <input type="text" class="form-control" asp-for="Name" id="validationName" required>
                        </div>

                        <div class="col-md-6 mb-6">
                            <label for="validationImageUrl">Yazar Fotoğraf Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" id="validationImageUrl" required>
                        </div>
                        <div class="col-md-12 mb-6">
                            <label for="validationDescription">Açıklama</label>
                            <textarea rows="5" class="form-control" asp-for="Description" id="validationDescription" required></textarea>
                        </div>

                    </div>



                    <button class="btn btn-primary waves-effect waves-light mt-3" type="submit">Güncelle</button>
                </form>

            </div>
        </div>
    </div>

</div>


