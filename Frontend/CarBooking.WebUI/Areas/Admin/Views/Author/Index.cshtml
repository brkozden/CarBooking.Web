@model List<ResultAuthorDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}





@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Yazar Listesi</h4>
                    <p class="card-subtitle mb-4">
                        <code>Ana sayfanın yazar ile ilgili alanında bulunan bilgilerin ekleme, düzenleme ve silme işlemlerini bu sayfa üzerinden yapabilirsiniz.</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Ad Soyad</th>
                                    <th>Açıklama</th>
                                    <th>Fotoğraf Url</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td><img src="@item.ImageUrl" height="50" width="50" style="margin-right:.6rem"/></td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.ImageUrl</td>
                                        <td><a href="/Admin/Author/UpdateAuthor/@item.AuthorId" class="btn btn-outline-success waves-effect waves-light">Güncelle</a></td>
                                        <td><a href="/Admin/Author/RemoveAuthor/@item.AuthorId" class="btn btn-outline-danger waves-effect waves-light">Sil</a></td>
                                        <td><a href="/Admin/Author/#/@item.AuthorId" class="btn btn-outline-danger waves-effect waves-light">Yazarın Blogları</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>



    </div>

    <a href="/Admin/Author/CreateAuthor" class="btn btn-success btn-lg btn-block waves-effect waves-light">
        Yeni Yazar Ekle
    </a>
}

else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Kayıtlı Yazar Bulunamadı</div>

}







