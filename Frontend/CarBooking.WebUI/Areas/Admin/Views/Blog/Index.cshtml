@model List<ResultAllBlogsWithAuthorsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml"; int count = 0;
}


@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blog Listesi ve İşlemleri</h4>
                    <p class="card-subtitle mb-4">
                        <code>
                            Bloglarla ilgili ekleme, düzenleme, silme ve listeleme işlemlerini bu sayfa üzerinden yapabilirsiniz.
                            Yeni Blog ekleme işlemi admin tarafından yapılamamaktadır. Eğer blog oluşturmak isterseniz
                            sisteme yazar olarak giriş yapmanız gerekmektedir. Her yazar sadece kendi bloğunu düzenleyebilir.
                        </code>
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Başlık</th>
                                    <th>Yazar</th>
                                    <th>Kategori</th>
                                    <th>Tarih</th>
                                    <th>Yayından Kaldır</th>
                                    <th></th>
                                    <th></th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.AuthorName</td>
                                        <td>@item.CategoryId</td>
                                        <td>@item.CreatedDate.ToShortDateString()</td>
                                        <td><a href="/Admin/Blog/RemoveBlog/@item.BlogId" class="btn btn-outline-danger waves-effect waves-light">Yayından Kaldır</a></td>
                                        <td><a href="/Blog/BlogDetail/@item.BlogId" class="btn btn-outline-dark waves-effect waves-light">Bloğu Gör</a></td>
                                        <td><a href="/Admin/Comment/GetComment/@item.BlogId" class="btn btn-outline-dark waves-effect waves-light">Yorumlar</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>



    </div>

}

else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Kayıtlı Blog Bulunamadı</div>

}





