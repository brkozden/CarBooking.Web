@model List<ResultCarFeatureByCarIdDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Araba Ait Özellikler Listesi</h4>
                    <p class="card-subtitle mb-4">
                        <code>Bu sayfada araca ait özellik eklemesi yapabilir, mevcut özellikleri kaldırabilir veya güncelleyebilirsiniz.</code>
                    </p>
                    <form method="post">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].CarFeatureId" />
                                <input type="hidden" asp-for="@Model[i].FeatureName" />
                                <input type="checkbox" asp-for="@Model[i].Available" class="form-check-input" />
                                <label class="form-check-label" for="@Model[i].Available">@Model[i].FeatureName</label>
                            </div>
                        }
                        <br />
                        <button class="btn btn-success">Değişiklikleri Kaydet</button>
                    </form>
                </div>
            </div>

        </div>



    </div>

    <a href="/Admin/Category/CreateCategory" class="btn btn-success btn-lg btn-block waves-effect waves-light">
        Yeni Kategori Ekle
    </a>
}

else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Kayıtlı Kategori Bulunamadı</div>

}





