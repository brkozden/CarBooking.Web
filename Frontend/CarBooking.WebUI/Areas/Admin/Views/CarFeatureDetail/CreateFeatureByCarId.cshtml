@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Arabaya Ait Özellik Ekleme Sayfası</h4>
                    <p class="card-subtitle mb-4">
                        <code>Bu sayfada araca ait özellik tanımlamasını yapabilirsiniz.</code>
                    </p>
                    <form method="post">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].FeatureId" />
                                <input type="hidden" asp-for="@Model[i].Name" />
                                 <input type="checkbox" class="form-check-input" />
                                <label class="form-check-label" for="">@Model[i].Name</label>  
                            </div>
                        }
                        <br />
                        <button class="btn btn-success">Araca Özellikleri Tanımla</button>
                    </form>
                </div>
            </div>

        </div>



    </div>

    <a href="/Admin/Category/CreateCategory" class="btn btn-success btn-lg btn-block waves-effect waves-light">
        Yeni Kategori Ekle
    </a>
}

else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Bu Araç İçin Kayıtlı Özellik Bulunamadı</div>

}



