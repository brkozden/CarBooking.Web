@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}






<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Yeni Hakkımızda Bilgisi Ekleme</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Hakkımızda İşlemleri</a></li>
                    <li class="breadcrumb-item active">Yeni Hakkımızda Verileri Ekleme</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title">Haakkımızda Bilgisi Ekleme Formu</h4>
                <p class="card-subtitle mb-4">
                    <code>Ana sayfanın hakkımızda alanında bulunan bilgilerin eklenmesi işlemini bu sayfa üzerinden yapabilirsiniz.</code>
                </p>
                <form class="needs-validation" method="post">
                    <div class="form-row">

                        <div class="col-md-6 mb-6">
                            <label for="validationTitle">Başlık</label>
                            <input type="text" class="form-control" asp-for="Title" id="validationTitle" required>
                        </div>
                       
                        <div class="col-md-6 mb-6">
                            <label for="validationImageUrl">Fotoğraf Url</label>
                            <input type="text" class="form-control" asp-for="ImageUrl" id="validationImageUrl" required>
                        </div>
                        <div class="col-md-12 mb-6">
                            <label for="validationDescription">Açıklama</label>
                            <textarea rows="5"  class="form-control" asp-for="Description" id="validationDescription" required></textarea>
                        </div>

                    </div>


                    <button class="btn btn-primary waves-effect waves-light mt-3" type="submit">Kaydet</button>
                </form>

            </div>
        </div>
    </div>

</div>









