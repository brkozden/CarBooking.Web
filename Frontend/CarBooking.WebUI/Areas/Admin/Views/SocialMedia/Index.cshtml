@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}






@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sosyal Medya Alanı</h4>
                    <p class="card-subtitle mb-4">
                        <code>Sosyal medya alanında bulunan bilgilerin ekleme, düzenleme ve  silme işlemlerini bu sayfa üzerinden yapabilirsiniz.</code>
                    </p>
                    <div class="table-responsive">
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Sosyal Medya</th>
                                    <th>Url</th>
                                    <th>İkon</th>
                                    <th>Güncelle</th>
                                    <th>Sil</th>
                                    <th>Aç</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Name</td>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td><a href="/Admin/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-outline-success waves-effect waves-light">Güncelle</a></td>
                                        <td><a href="/Admin/SocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-danger waves-effect waves-light">Sil</a></td>
                                        <td><a href="/Admin/SocialMedia/RemoveSocialMedia/@item.SocialMediaId" class="btn btn-outline-secondary waves-effect waves-light">Aç</a></td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>



    </div>

    <a href="/Admin/SocialMedia/CreateSocialMedia" class="btn btn-success btn-lg btn-block waves-effect waves-light">
        Yeni Sosyal Medya Ekle
    </a>
}

else
{

    <div class="bg-danger text-white p-3 text-center mt-3" style="border-radius:25px;">Kayıtlı Sosyal Medya Bulunamadı</div>

}







